# Set xfce environment and _VIRTUALGL
<%= set_xfce %>

# Start VisIt
<% if context.respond_to?(:input) && !context.input.to_s.empty? %>
/opt/visit/bin/visit -o "<%= context.input %>" &
<% else %>
/opt/visit/bin/visit &
<% end %>

# Start up xfce desktop (block until user logs out of desktop)
xfce4-session
